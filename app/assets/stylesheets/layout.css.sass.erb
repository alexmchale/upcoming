@import "compass"
@import "compass/css3/border-radius"
@import "compass/css3/box-shadow"

body
  background-image: url(<%= image_path "purty_wood.png" %>) 

#main-content, #main-footer
  +border-radius(25px)
  +box-shadow
  margin-top: 75px
  margin-bottom: 75px
  padding: 25px
  background-color: rgba(255, 255, 255, 0.6)

#main-footer
  text-align: center

.navbar-inner
  +background-image(linear-gradient(#630, #210))
  a.brand
    color: #FA0 !important
  li.active
    a
      +background-image(linear-gradient(#850, #320))

a
  color: #630
  &:hover
    color: #850
    text-decoration: underline

table.basic
  +box-shadow
  width: 100%
  tbody
    td
      padding: 20px
    tr
      &:nth-child(odd)
        background-color: rgba(96, 48, 48, 0.1)
      &:nth-child(even)
        background-color: rgba(32, 16, 0, 0.1)
    tr + tr
      border-top: 1px solid rgba(0, 0, 0, 0.05)

h3
  margin-top: 25px
