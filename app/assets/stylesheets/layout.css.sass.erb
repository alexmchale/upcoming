@import "compass"
@import "compass/css3/border-radius"
@import "compass/css3/box-shadow"

$font-heading: "le-havre"
$font-body: "le-havre"
$font-small: 16px
$font-medium: 20px
$font-large: 26px
$font-huge: 32px

body
  background-image: url(<%= image_path "purty_wood.png" %>) 
  font-family: "modesto-text", "le-havre"
  font-size: $font-medium

#main-content, #main-footer
  +border-radius(5px)
  +box-shadow
  margin-top: 75px
  margin-bottom: 75px
  padding: 25px
  background-color: rgba(255, 255, 255, 0.6)

#main-footer
  text-align: center
  font-size: $font-medium

.navbar-inner
  +background-image(linear-gradient(#630, #210))
  a.brand
    color: #FA0 !important
  li.active
    a
      +background-image(linear-gradient(#850, #320))
  li.sign-up a
    font-weight: bold
    font-size: 1.25em

a
  color: #630
  &:hover
    color: #850
    text-decoration: underline

table.basic
  +border-radius(5px)
  +box-shadow
  width: 100%
  tbody
    td
      padding: 20px
    tr
      &:nth-child(odd)
        background-color: rgba(96, 48, 48, 0.1)
      &:nth-child(even)
        background-color: rgba(32, 16, 0, 0.1)
    tr + tr
      border-top: 1px solid rgba(0, 0, 0, 0.05)
    td.center
      text-align: center

div.input
  margin-bottom: 25px
  .hint
    font-size: $font-small
    font-style: italic
    color: #666

h1, h2
  font-size: $font-huge

h1, h2
  margin-bottom: 25px

h3
  margin-top: 25px

input[type='submit']
  margin-top: 25px

.top-label
  float: left
  max-width: 750px

.top-controls
  float: right

ul.nav-tabs.search-types
  border-right: none
  li.active
    a
      border-color: rgba(128, 80, 0, 0.5)
      background-color: rgba(255, 160, 0, 0.5)
      &:hover
        border-color: rgba(128, 80, 0, 0.5)
        background-color: rgba(255, 160, 0, 0.15)
  a
    border-color: rgba(48, 32, 0, 0.5)
    &:hover
      border-color: rgba(48, 32, 0, 0.5)
      background-color: rgba(255, 160, 0, 0.15)

input[name='search[parameters][term]']
  font-size: $font-large
  width: 500px
  padding: 25px
  line-height: $font-large

label.radio, label.control-label
  font-size: $font-medium
