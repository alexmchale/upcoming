@import "compass"
@import "compass/css3/border-radius"
@import "compass/css3/box-shadow"

$font-heading: "prenton"
$font-body: "prenton"
$font-small: 14px
$font-medium: 18px
$font-large: 24px
$font-huge: 30px

$color-translucent-white: rgba(255, 255, 255, 0.6)
$color-orange-light: #850
$color-orange-medium: #630
$color-orange-dark: #210
$color-translucent-medium: rgba(96, 48, 48, 0.1)
$color-translucent-dark: rgba(32, 16, 0, 0.1)
$color-translucent-black: rgba(0, 0, 0, 0.05)
$color-border-bright: rgba(255, 160, 0, 0.5)
$color-border-light: rgba(160, 120, 0, 0.5)
$color-border-medium: rgba(128, 80, 0, 0.5)
$color-border-dark: rgba(48, 32, 0, 0.5)

body
  background-image: url(<%= image_path "purty_wood.png" %>) 
  font-family: $font-body, "helvetica", sans-serif
  font-size: $font-medium
  overflow-y: scroll

h1, h2, h3, h4, h5, h6
  font-family: $font-heading, "helvetica", sans-serif

p
  font-family: $font-body

#main-content, #main-footer
  +border-radius(5px)
  +box-shadow
  margin-top: 75px
  margin-bottom: 75px
  padding: 25px
  background-color: $color-translucent-white

#main-footer
  text-align: center
  font-size: $font-medium

.navbar-inner
  +background-image(linear-gradient($color-orange-medium, $color-orange-dark))
  a.brand
    color: #FA0 !important
  li.active
    a
      +background-image(linear-gradient($color-orange-light, $color-orange-dark))
  li.sign-up a
    font-weight: bold
    font-size: 1.25em

a
  color: #630
  &:hover
    color: #850
    text-decoration: underline

table.basic
  +border-radius(5px)
  +box-shadow
  width: 100%
  font-size: $font-large
  tbody
    td
      padding: 20px
    tr
      &:nth-child(odd)
        background-color: $color-translucent-medium
      &:nth-child(even)
        background-color: $color-translucent-dark
    tr + tr
      border-top: 1px solid $color-translucent-black
    td.center
      text-align: center

div.input
  margin-bottom: 25px
  .hint
    font-size: $font-small
    font-style: italic
    color: #666

h1, h2
  font-size: $font-huge

h1, h2
  margin-bottom: 25px

h3
  margin-top: 25px

input[type='submit']
  margin-top: 25px

.top-label
  float: left
  max-width: 750px
  em
    text-transform: uppercase
    font-style: italic
    text-decoration: underline

.top-controls
  float: right

ul.nav-tabs.search-types
  border-right: none
  li.active
    a
      border-color: $color-border-medium
      background-color: $color-border-bright
      &:hover
        border-color: $color-border-medium
        background-color: $color-border-bright
  a
    border-color: $color-border-medium
    &:hover
      border-color: $color-border-medium
      background-color: $color-border-light 

form#new_search
  input[name='search[term]']
    font-size: $font-large
    width: 500px
    padding: 25px
    line-height: $font-large
  label.radio
    display: inline
    margin-right: 50px
    input
      float: none
      display: inline
      top: -3px
      position: relative
      margin-right: 5px

label.radio, label.control-label
  font-size: $font-medium

h1.big-greeting
  font-size: 64px
  text-align: center

.tutorial
  h2
    margin-top: 40px
  h3
    font-style: italic
    margin: 50px
    font-size: $font-large
    font-weight: normal
  img
    display: block
    margin-left: auto
    margin-right: auto

.alert-danger, .alert-error
  border-color: $color-orange-light

.modal
  form
    margin: 0px
